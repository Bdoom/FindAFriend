<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= form.label :gender %>
    <%= form.collection_select :gender_id, Gender.order(:name),:id,:name, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :sexuality %>
    <%= form.collection_select :sexuality_id, Sexuality.order(:name),:id,:name, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :race %>
    <%= form.collection_select :race_id, Race.order(:name),:id,:name, include_blank: true %>
  </div>
  
  <div class="field">
    <%= form.label :religion %>
    <%= form.collection_select :religion_id, Religion.order(:name),:id,:name, include_blank: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
